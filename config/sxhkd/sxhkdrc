#
# wm independent hotkeys
#

# terminal emulator
super + Return
	kitty

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# toggle polybar
super + shift + p
  polybar-msg cmd toggle

# lock screen
# super + shift + L
#   dm-tool lock

# make screenshot
super + Print
  scrot -e 'mv $f ~/.screenshots/'

# make screenshot (flameshot)
super + shift + s
  flameshot gui

# browser start
super + shift + b
	zen-browser

# spotify start
super + shift + m
  spotify

# obsidian start
super + shift + o
  obsidian

# discord start
super + shift + d
  discord

# quit/restart bspwm
super + alt + r
	bspc wm -r

# close and kill
super + w
	bspc node -c

#
# function keys
#

# mute audio
XF86AudioMute
  pamixer -t

# lower volume
XF86AudioLowerVolume
  pamixer --decrease 5

# raise volume
XF86AudioRaiseVolume
  pamixer --increase 5

# mute mic
XF86AudioMicMute
  pamixer --source 0 -t

# lower brightness
XF86MonBrightnessDown
  $HOME/scripts/brightness.sh lower

# raise brightness
XF86MonBrightnessUp
  $HOME/scripts/brightness.sh raise

#
# state/flags
#

# set the window state
super + {t,shift + t,shift + f}
	bspc node -t {tiled,pseudo_tiled,fullscreen}

# set the pseudo fullscreen
super + f
  bspc config window_gap {0,8}

#
# focus/swap
#

# swap nodes in the given direction
super + shift + alt + {h,j,k,l}
	bspc node -s {west,south,north,east}

# focus the node in the given direction
super + shift + ctrl + {h,j,k,l}
  bspc node -f {west,south,north,east}

# cycle the next/previous workspace in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# send to the given workspace
super + shift + {1-9,0}
	bspc node -d '^{1-9,10}'

# focus given workspace
super + {1-9,0}
  bspc desktop -f '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {Right,Down,Up,Left}
	bspc node -p {east,south,north,west}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

#
# move/resize
#

# move top & left side
super + shift + {h,j,k,l}
	bspc node -z {left -20 0,top 0 20,top 0 -20,left 20 0}

# move right & bottom side
super + alt + {h,j,k,l}
	bspc node -z {right -20 0,bottom 0 20,bottom 0 -20,right 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

